{
  "name": "@onfido/castor-tokens",
  "version": "1.0.0-beta.5",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">= 16.14",
    "npm": ">= 8",
    "yarn": "\n\n\u001b[1;31m[ERROR]\u001b[0;32m Please use npm instead!\u001b[0m\n\n"
  },
  "scripts": {
    "postinstall": "husky install",
    "generate": "concurrently npm:generate:example npm:generate:npm npm:generate:android",
    "pregenerate:example": "shx mkdir -p example/themes",
    "generate:example": "concurrently npm:generate:example:*",
    "generate:example:tokens": "esbuild scripts/theo/generate-example.ts --bundle --platform=node --target=es2019 --format=cjs --external:theo | FILE_NAME=tokens node",
    "generate:example:theme:day": "esbuild scripts/theo/generate-example.ts --bundle --platform=node --target=es2019 --format=cjs --external:theo | FILE_NAME=themes/day node",
    "generate:example:theme:night": "esbuild scripts/theo/generate-example.ts --bundle --platform=node --target=es2019 --format=cjs --external:theo | FILE_NAME=themes/night node",
    "pregenerate:npm": "shx mkdir -p packages/npm/src/definitions",
    "generate:npm": "concurrently npm:generate:npm:*",
    "generate:npm:definitions:border-radius": "esbuild scripts/theo/npm/generate-definitions.ts --bundle --platform=node --target=es2019 --format=cjs --external:theo | DEFINITIONS_NAME=border-radius node",
    "generate:npm:definitions:color-palette": "esbuild scripts/theo/npm/generate-definitions.ts --bundle --platform=node --target=es2019 --format=cjs --external:theo | DEFINITIONS_NAME=color-palette node",
    "generate:npm:definitions:theme-colors": "esbuild scripts/theo/npm/generate-definitions.ts --bundle --platform=node --target=es2019 --format=cjs --external:theo | DEFINITIONS_NAME=theme-colors node",
    "generate:npm:tokens": "esbuild scripts/theo/npm/generate-tokens.ts --bundle --platform=node --target=es2019 --format=cjs --external:theo | node",
    "generate:npm:theme:day": "esbuild scripts/theo/npm/generate-theme.ts --bundle --platform=node --target=es2019 --format=cjs --external:theo | THEME_NAME=day COLOR_SCHEME=light node",
    "generate:npm:theme:night": "esbuild scripts/theo/npm/generate-theme.ts --bundle --platform=node --target=es2019 --format=cjs --external:theo | THEME_NAME=night COLOR_SCHEME=dark node",
    "pregenerate:android": "shx mkdir -p libraries/android/castor-tokens/src/main/res/values && shx mkdir -p libraries/android/castor-tokens/src/main/res/values-night",
    "generate:android": "concurrently npm:generate:android:*",
    "generate:android:values:color": "esbuild scripts/theo/android/generate-values.ts --bundle --platform=node --target=es2019 --format=cjs --external:theo | VALUES_NAME=color node",
    "generate:android:values:color-night": "esbuild scripts/theo/android/generate-values.ts --bundle --platform=node --target=es2019 --format=cjs --external:theo | VALUES_NAME=color NIGHT_MODE=true node",
    "generate:android:values:dimen": "esbuild scripts/theo/android/generate-values.ts --bundle --platform=node --target=es2019 --format=cjs --external:theo | VALUES_NAME=dimen node",
    "build": "concurrently npm:build:npm npm:build:android",
    "prebuild:npm": "shx rm -rf packages/*/dist && npm run generate:npm",
    "build:npm": "concurrently npm:build:npm:*",
    "build:npm:css": "sass packages/npm/style:packages/npm/dist --no-source-map -s compressed",
    "build:npm:esm": "tsc -p packages/npm/tsconfig.json",
    "prebuild:android": "shx rm -rf libraries/**/build && npm run generate:android",
    "build:android": "cd libraries/android && ./gradlew build",
    "prepreview": "npm run generate:example",
    "preview": "http-server example -o",
    "lint": "concurrently npm:lint:*",
    "lint:commit": "commitlint --from origin/main --to HEAD --verbose",
    "lint:es": "eslint . --ignore-path .gitignore --max-warnings 0",
    "lint:ts": "tsc --noEmit",
    "lint:style": "stylelint '**/*.{,s}css' --ignore-path .gitignore --max-warnings 0",
    "lint:prettier": "prettier . --check --ignore-unknown",
    "test": "jest --coverage",
    "release": "HUSKY=0 standard-version"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@jest/globals": "^28.1.1",
    "@types/jest": "^27.4.1",
    "@types/lodash": "^4.14.182",
    "@types/node": "^18.0.0",
    "@types/theo": "^8.1.4",
    "@types/xml": "^1.0.8",
    "@typescript-eslint/eslint-plugin": "^5.30.0",
    "@typescript-eslint/parser": "^5.30.0",
    "commitizen": "^4.2.4",
    "concurrently": "^7.2.1",
    "cz-conventional-changelog": "^3.3.0",
    "esbuild": "^0.14.47",
    "eslint": "^8.18.0",
    "http-server": "^14.1.1",
    "husky": "^8.0.1",
    "jest": "^27.5.1",
    "lint-staged": "^13.0.3",
    "lodash": "^4.17.21",
    "prettier": "^2.7.1",
    "prettier-plugin-organize-imports": "^3.0.0",
    "sass": "^1.53.0",
    "shx": "^0.3.4",
    "standard-version": "^9.5.0",
    "stylelint": "^14.9.1",
    "stylelint-config-sass-guidelines": "^9.0.1",
    "theo": "^8.1.5",
    "ts-jest": "^27.1.4",
    "typescript": "^4.7.4",
    "xml": "^1.0.1"
  }
}
