{
  "include": ["**/*"],
  "exclude": ["node_modules/**/*", "packages/npm/src/index.ts"],
  "compilerOptions": {
    "alwaysStrict": true,
    "declaration": false,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": false,
    "strictNullChecks": true,

    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2019",
    "esModuleInterop": true,

    "lib": ["esnext", "dom"]
  }
}
